<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.SchoolManage.dao.AdminUserDao">
    <select id="findAll" resultType="com.SchoolManage.pojo.AdminUser">
        select * from adminuser ;
    </select>
    <select id="findByName" resultType="com.SchoolManage.pojo.AdminUser">
        select * from adminuser where name like cancat('%',#{name},'%');
    </select>
    <insert id="addAdminUser" parameterType="com.SchoolManage.pojo.AdminUser">
        insert into adminuser(username,password,phone,department,`position`,`name`) values(#{username},#{password},
        #{phone},#{department},#{position},#{name})
    </insert>
    <update id="updateAdminUser" parameterType="com.SchoolManage.pojo.AdminUser">
        update from adminuser set username = #{username},
        password = #{password},
        phone = #{phone},
        department = #{department},
        `position` = #{position},
        `name` = #{name}
        where id = #{id}
    </update>
    <select id="getAdminUser" resultType="com.SchoolManage.pojo.AdminUser">
        select * from adminuser where username = #{username}
    </select>
    <delete id="deleteAdminUser" parameterType="int">
        delete from adminuser where id = #{id}
    </delete>
</mapper>
