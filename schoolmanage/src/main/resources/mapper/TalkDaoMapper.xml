<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.SchoolManage.dao.TalkDao">
    <insert id="insertTalk">
        insert
        into talk(student, teacher, content, time)
        values (#{talk.student},
                #{talk.teacher},
                #{talk.content},
                #{talk.time,jdbcType=DATE})
    </insert>
    <insert id="insertAllTalk">
        insert into talk(student,teacher,content,time)
        values
        <foreach collection="list" separator="," item="item">
            (#{item.student},#{item.teacher},#{item.content},#{item.time,jdbcType=DATE})
        </foreach>
    </insert>
    <delete id="deleteTalk">
        delete
        from talk
        where id = #{id}
    </delete>

    <select id="findAll" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk limit #{startPage},#{num};
    </select>
    <select id="findByStudentNoPage" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk
        where student = #{student}
    </select>
    <select id="findByTeacher" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk
        where teacher like "%" #{teacher} "%" limit #{startPage}
            , #{num}
    </select>
    <select id="findByTime" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk
        where time = #{time} limit #{startPage}
            , #{num}
    </select>
    <select id="findAllCount" resultType="java.lang.Integer">
        select count(*)
        from talk
    </select>
    <select id="findByStudentPage" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk
        where student = #{student} limit #{startPage}
            , #{num}
    </select>
    <select id="findByStudentCount" resultType="java.lang.Integer">
        select count(*)
        from talk
        where student = #{student}
    </select>
    <select id="findByTimeCount" resultType="java.lang.Integer">
        select count(*)
        from talk
        where time = #{time}
    </select>
    <select id="findByTimeYearAndMonth" resultType="com.SchoolManage.pojo.Talk">
        select *
        from talk
        where date_format(time, '%Y-%m') = date_format(#{time}, '%Y-%m') limit #{startPage}
            , #{num}
    </select>
    <select id="findByTimeYearAndMonthCount" resultType="java.lang.Integer">
        select count(*)
        from talk
        where date_format(time, '%Y-%m') = date_format(#{time}, '%Y-%m')
    </select>
</mapper>
