        from activemember
        where activity = #{id}
        and clazz = #{clazz} limit #{startPage}
        , #{num}
    </select>
    <select id="findByActiveAndClazzCount" resultType="java.lang.Integer">
        select *
        <include refid="activeName"></include>
        from activemember
        where activity = #{id}
        and clazz = #{clazz}
    </select>
    <select id="findById" resultType="com.SchoolManage.pojo.Activemember">
